  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "jsx": "react",
    "jsxFactory": "h",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "strict": true,
    "target": "ES2015"
  },
  "exclude": ["build"],
  "include": ["./src/**/*.tsx", "./src/**/*.ts", "./src/**/*.js"],
  "lib": ["dom", "es2015"]
}
